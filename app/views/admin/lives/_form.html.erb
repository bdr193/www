<%= simple_form_for [:admin, @live] do |f| %>
  <% if @live.demoday? %>
    <%= f.input :batch_slug, placeholder: 43 %>
  <% else %>
    <%= f.input :city_slug, collection: @city_slugs, label: "Where is it happenning?" %>
    <%= f.input :title, placeholder: 'Aperotalk avec Quentin Sannié, Workshop - Build your first website in 2 hour with Boris Paillard' %>
    <%= f.input :subtitle, placeholder: 'CEO & Co-fondateur de DEVIALET', hint: "Goes next to the title at the top of the video" %>
    <%= f.input :description, hint: 'That will go on the right of the video. You can use Markdown in here ☝️' %>
    <%= f.input :link, label: 'Learn more link', placeholder: 'http://www.devialet.fr', hint: "Goes under the description. You can leave this blank if you do not have any link." %>
    <%= f.input :company_logo, as: :attachinary, hint: "Square format (60x60)" %>
    <%= f.input :interviewee_picture, as: :attachinary, hint: "Square format (60x60)" %>
    <%= f.input :meta_image, as: :attachinary, hint: "Super important, will appear as a twitter card when you share the lewagon.com/live URL!" %>
    <%= f.input :facebook_url, label: 'Facebook video url', hint: 'Click on post date and look in the URL', placeholder: 'https://www.facebook.com/lewagon/videos/548038245394778/' %>
  <% end %>
  <%= f.input :category, as: :hidden %>
  <%= f.submit class: 'btn btn-primary' %>
<% end %>
