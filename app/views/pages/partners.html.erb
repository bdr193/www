                          <path d="M1128.08399,332.234171 C728.914803,326.090764 528.709589,453.775775 294.617491,354.5556 C167.188064,300.544506 111.297123,182.851111 126.94467,1.47541261 L1.10761634,1.47541261 L1.10761634,499.986799 L2255.06037,499.986799 L2255.06037,1.47541261 L2126.11607,1.47541261 C2140.20294,192.087163 2068.63627,318.074998 1911.41606,379.43892 C1754.19584,440.802842 1527.25318,338.37758 1128.08399,332.234171 Z"></path>
                      </g>
                    </g>
                  </g>
                </svg>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>