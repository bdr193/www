<%= content_for(:title) { "We love our partners".html_safe} %>
<%= content_for(:description) { "We are building stellar partnerships for our alumni since 2014." } %>
<%= content_for(:image_url) { image_url 'social/partners_card.png' } %>

<h1>We love our partners ❤️️</h1>
<div class="container-wrapper">
  <div class="container">

      <% categories = [
          'advantage',
          'event',
          'institutions',
          'swag'
          ] %>

      <% categories.each do |category| %>
        <div class="container-partner">
          <h2><%= category.capitalize %></h2>
          <% Static::PARTNERS.each_with_index do |partner, index| %>
          <% if partner[:category] == category %>
            <div class="card-partner" style="border-color: <%= partner[:color] %>;">
              <%= link_to "", partner[:url], target: :blank %>
              <div class="card-partner-content">
                <%= image_tag "partners/#{partner[:logo]}", alt: partner[:name] %>
                <p><%= partner[:description] %></p>
                <span>Learn more</span>
                <?xml version="1.0" encoding="UTF-8"?>
                <?xml version="1.0" encoding="UTF-8"?>
